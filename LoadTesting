def userTypeField = getFieldByName("User type")
def clientNameField = getFieldByName("Client Name")

// Check if the User type field is set to "client" during issue creation
if (userTypeField.getValue() == "client") {
    // Make the Client Name field mandatory
    clientNameField.setRequired(true)
} else {
    // Make the Client Name field optional
    clientNameField.setRequired(false)
}
