def string_to_urn(input_string, namespace='example'):
    """
    Convert a string to URN format.

    Parameters:
    - input_string (str): The input string to be converted to URN.
    - namespace (str): The namespace to be used in the URN (default is 'example').

    Returns:
    - urn (str): The URN formatted string.
    """
    # Ensure the input is a string
    if not isinstance(input_string, str):
        raise ValueError("Input must be a string")

    # Replace spaces with underscores
    input_string = input_string.replace(' ', '_')

    # Format the URN
    urn = f'urn:{namespace}:{input_string}'

    return urn

# Example usage:
input_string = "Hello World"
urn_result = string_to_urn(input_string)
print(f"Original String: {input_string}")
print(f"URN Format: {urn_result}")
